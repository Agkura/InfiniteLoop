<!DOCTYPE html>
<html>
  <head>
    <title>InfiniteLoop</title>
    <%= csrf_meta_tags %>

    <script type="text/javascript">
      <% if current_user %>
  	     window.currentUser =
         <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      <% end %>
    </script>

    <script>
      window.logo = "<%= image_url("logo.svg") %>"
      window.logoWhite = "<%= image_url("logo-white.svg") %>"
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <script src="https://use.fontawesome.com/2fe71a01c5.js"></script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
